<% if flash[:notice] %>
 <p id = "notice">
  <%= flash[:notice] %>
 </p>
<% end %>

<main>
 <p id = "notice"></p>
  <div class="container">
   <div class="row">
    <div class="col-md-3">
     <h2>User info</h2>
     <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
     <table class="table">
     <tbody>
     <tr></tr>
     <tr>
      <th>name</th>
      <th><%= @user.name %></th>
     </tr>
     <tr>
      <th>introduction</th>
      <th><%= @user.introduction %></th>
     </tr>
     </tbody>
    </table>

   <div class="row">
    <%= link_to "", edit_user_path(@user),class:"btn btn-outline-secondary btn-block fas fa-user-cog" %>
   </div>

   <h2 class="mt-3">New book</h2>
<%= form_with model: @book_new, local:true do |f| %>
<div>
<label for="book_title">Title</label>
  <div><%= f.text_field :title %></div>
</div>
<div>
<label for="book_opinion">Opinion</label>
<div><%= f.text_area :body %></div>
 </div>

 <%= f.submit :"Create Book", class: "btn btn-success" %>
 <% end %>
</div>


    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
     <table class="table">
      <tbody>
       <tr>
        <td>
         <%= link_to user_path(@user.id) do %>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %>
       <% end %>
         <br>
         <%= link_to @user.name , user_path(@user.id) %>
        </td>
        <td><%= link_to @book.title %>
        </td>
        <td><%= @book.body %></td>
        <td> <% if @book.user == current_user %>
             <%= link_to "Edit",edit_book_path(@book.id), class:"btn btn-sm btn-success"  %>
             <% end %>
        </td>
        <td><% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %>
            <% end %>
        </td>
       </tr>
      </tbody>
     </table>
    </div>
   </div>
  </div>
</main>